<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.seekit.AddTri" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textViewNombeAddTri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.51"
                android:text="Nombre"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editNombeAddTri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:hint="EditNombre" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textViewMACAddtri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Ingrese la MAC de su Dispositivo:"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/editMAC1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:digits="abcde1234567890"
                android:maxLength="2"
                android:hint="00" />

            <EditText
                android:id="@+id/editMAC2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:digits="abcde1234567890"
                android:maxLength="2"
                android:hint="00" />

            <EditText
                android:id="@+id/editMAC3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:digits="abcde1234567890"
                android:maxLength="2"
                android:hint="00" />

            <EditText
                android:id="@+id/editMAC4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:digits="abcde1234567890"
                android:maxLength="2"
                android:hint="00" />

            <EditText
                android:id="@+id/editMAC5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:digits="abcde1234567890"
                android:maxLength="2"
                android:hint="00" />

            <EditText
                android:id="@+id/editMAC6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:digits="abcde1234567890"
                android:maxLength="2"
                android:hint="00" />

            <EditText
                android:id="@+id/editMAC7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:digits="abcde1234567890"
                android:maxLength="2"
                android:hint="00" />
        </LinearLayout>
    </LinearLayout>
